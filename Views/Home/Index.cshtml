@model projectwerk.Models.LoginData

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Broodjeszaak</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/StyleSheet.css" />
</head>
<body>
    <div class="login-container">
        <h2>Login bij de Broodjeszaak</h2>
        <form method="post" asp-action="Login" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="inputEmail">E-mailadres</label>
                <input class="form-control" type="email" id="inputEmail" name="Email" placeholder="Voer uw e-mailadres in" required>
            </div>
            <div class="form-group">
                <label for="inputPassword">Wachtwoord</label>
                <input class="form-control" type="password" id="inputPassword" name="Password" placeholder="Voer uw wachtwoord in" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block" id="loginBtn" disabled>Inloggen</button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }

        <hr>
        <p class="text-center">Nog geen account? <a asp-controller="Home" asp-action="Registratie">Maak een account aan</a></p>
        <p class="text-center"><a href="#">Wachtwoord vergeten?</a></p>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function validateForm() {
            var email = document.getElementById("inputEmail").value;
            var password = document.getElementById("inputPassword").value;
            if (email.trim() === "" || password.trim() === "") {
                alert("Please fill in all fields.");
                return false;
            }
            return true;
        }

        // Enable/disable login button based on input fields
        $(document).ready(function () {
            $('#inputEmail, #inputPassword').on('keyup', function () {
                if ($('#inputEmail').val().trim() !== "" && $('#inputPassword').val().trim() !== "") {
                    $('#loginBtn').prop('disabled', false);
                } else {
                    $('#loginBtn').prop('disabled', true);
                }
            });
        });
    </script>
</body>
</html>
